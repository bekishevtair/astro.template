---
import i18next, { t, changeLanguage } from "i18next"
import { localizePath, localizeUrl } from "astro-i18next"
import Layout, { cc } from "../layouts/Layout.astro"
import Section from "../components/Section.astro"
import Column from "../components/Column.astro"
import Image from "../components/Image.astro"
import Form from "../components/Form.astro"
import Button from "../components/btns/Button.astro"

changeLanguage("en")

const home = cc("home")
const sec1 = home.sec1
const sec2 = home.sec2
const styles = {
  h: "tit ts-48 ts-lg-60 tc-primary tw-800 mb-5",
  p: "txt ts-16 ts-lg-18 tc-gray tw-400 mb-4"
}
---

<Layout>
  <Section
    class:list="section-hero"
    sectionName="1">
    <Column class:list="etgsf">
      <h1>
        {t("site.lang")}
      </h1>
      <h1 class:list={[`${styles.h}`]}>
        {sec1.title}
      </h1>
      <p class={styles.p}>
        {sec1.text}
      </p>
      <Button btnTitle={t("btns.registration.title")} />
    </Column>
    <Column>
      <Image />
    </Column>
  </Section>
  <Section sectionName="2">
    <Column
      colsLg="12"
      justify="center"
      align="center">
      <h2 class={styles.h}>
        {sec2.title}
      </h2>
      <p class={`${styles.p} ta-center`}></p>
      <Button />
    </Column>
  </Section>
  <Section sectionName="3">
    <Column
      colsLg="12"
      justify="center"
      align="center">
      <Form />
    </Column>
  </Section>
</Layout>
