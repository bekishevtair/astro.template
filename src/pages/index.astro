---
import i18next, { t, changeLanguage } from "i18next";
import { localizePath, localizeUrl } from "astro-i18next";
import Layout from "../layouts/Layout.astro";
import Section from "../components/Section.astro";
import Column from "../components/Column.astro";
import Image from "../components/Image.astro";
import Form from "../components/Form.astro";
import Button from "../components/btns/Button.astro";

changeLanguage("en");

const cc = "pages.home";
const styles = {
    h: "tit ts-48 ts-lg-60 tc-blue tw-800 mb-4",
    p: "txt ts-16 ts-lg-18 tc-gray tw-400 mb-4"
};
---

<Layout>
  <Section sectionName='1'>
    <Column>
      <h1  class={styles.h}>
        {t(`${cc}.sec1.title`)}
      </h1>
      <p class={styles.p}>
        {t(`${cc}.sec1.text`)}
      </p>
      <Button 
        btnTitle={t('btns.registration.title')} 
      />
    </Column>
    <Column>
      <Image />
    </Column>
  </Section>
  <Section sectionName='2'>
    <Column colsLg='12' justify='center' align='center'>
      <h2 class={styles.h}>
        {t(`${cc}.sec2.title`)}
      </h2>
      <p class={`${styles.p} ta-center`}>
        {t(`${cc}.sec2.text`)}
      </p>
      <p class="typing-effect">This text is being typed.</p>

      <Button />
    </Column>
  </Section>
<Section sectionName='3'>
    <Column colsLg='12' justify='center' align='center'>
      <Form />
    </Column>
  </Section>
</Layout>
